@using MudBlazor
@using Q1Calculator.UI.Components.Library

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider/>

<MudLayout>
    <MudContainer MaxWidth="MaxWidth.Small" Class="ma-auto mt-10">
        <MudGrid>

            <MudItem xs="12">
                <CalculatorDisplay DisplayValue="@DisplayValue" OnEnterClicked="HandleApiCall"/>
            </MudItem>

            <MudItem xs="8">
                <Numpad OnDigitClicked="UpdateDisplay" OnBackspaceClicked="HandleBackspaceClicked" OnClearAllClicked="HandleClearAllClicked" />
            </MudItem>

            <MudItem xs="4">
                <Operator OnOperatorClicked="HandleOperatorClicked" />
            </MudItem>

            <MudItem>
                <Footer> </Footer>
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudLayout>
